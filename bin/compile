#!/usr/bin/env bash

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install RM20BspLibTb"
BUILD_DIR=$1
ENV_DIR=$3
echo "--> ENV RECIEVE_DATA =" $RECIEVE_DATA | indent
echo $BUILD_INFO
VENDOR_DIR="vendor"
LIBRARY_DIR="qollib"
DOWNLOAD_URL="https://s3.amazonaws.com/qolpilotlibs/RM20BspLibTb"
PROXY_URL="http://quotaguard2624:87774ce65362@us-east-1-static-brooks.quotaguard.com:9293"
env
echo "DOWNLOAD_URL = " $DOWNLOAD_URL | indent
echo "PROXY_URL" $PROXY_URL | indent

cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR
mkdir -p $LIBRARY_DIR
cd $LIBRARY_DIR
curl --proxy $PROXY_URL $DOWNLOAD_URL -O
chmod +x RM20BspLibTb

echo "exporting PATH and LIBRARY_PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/qollib.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:$HOME/vendor/qollib"' >> $PROFILE_PATH
echo 'export LD_LIBRARY_PATH="$LD_LIBRARY_PATH:$HOME/vendor/qollib"' >> $PROFILE_PATH

